import sys

line = ""
while True:
    prevLine = line
    line = sys.stdin.readline()

    if len(line) == 0:
        # reached EOL
        sys.stdout.write('\n')
        break

    line = line.rstrip('\n')

    # we delete as many chars as prevLine
    for i in range(0, len(prevLine) - len(line)):
        sys.stdout.write('\b \b')
    # now we go back to the beginning of the line
    sys.stdout.write('\r')

    sys.stdout.write(line)

